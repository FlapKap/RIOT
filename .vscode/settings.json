{
    "editor.rulers": [
        80,
        100
    ],
    "editor.detectIndentation": false,
    "files.insertFinalNewline": true,
    "files.associations": {
        "Makefile.*": "makefile",
        "*.mk": "makefile",
        "flashpage.h": "c",
        "mtd.h": "c",
        "stm32l0xx.h": "c",
        "stm32l072xx.h": "c"
    },
    "[shellscript][c][cpp]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
    },
    "[makefile]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
    },
    "sonarlint.pathToCompileCommands": "${workspaceFolder}/compile_commands.json",
}
